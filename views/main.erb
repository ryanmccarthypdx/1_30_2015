<h1>Jeanine St. Hubbins Tour Management, LLC</h1>

<h3>List of venues:</h3>
<% if !@all_venues.any?() %>
  <p>(No zoos or officers' clubs added yet)</p>
<% else %>
  <ul>
    <% @all_venues.each() do |venue| %>
      <li><%= venue.name() %></li>
    <% end %>
  </ul>
<% end %>

<form action="/add_venue" method="post">
  <label for="new_venue_name">Add a new venue:</label>
  <input id="new_venue_name" name="new_venue_name" type="text" placeholder="Zoo Theater">
  <button type="submit" class="btn btn-primary">Add</button>
</form>

<h3>List of bands and their dates:</h3>
<% if !@all_bands.any?() %>
  <p>(No bands added yet)</p>
<% else %>
  <ul>
    <% @all_bands.each() do |band| %>
      <li><%= band.name() %></li>
      <% band.venues().each() do |booked_venue| %>
        <ul>
          <li><%= booked_venue.name() %></li>
        </ul>
      <% end %>
    <% end %>
  </ul>
<% end %>

<form action="/add_band" method="post">
  <label for="new_band_name">Add a new band:</label>
  <input id="new_band_name" name="new_band_name" type="text" placeholder="Spinal Tap">
  <button type="submit" class="btn btn-primary">Add</button>
</form>
